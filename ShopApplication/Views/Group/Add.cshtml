@using ShopApplication.Helpers
@model ShopApplication.Models.GroupModel
@{
    ViewData["Title"] = "Add";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
</head>
<body>
    <form asp-controller="Group" asp-action="Add" method="post">
        <label>Code Number</label>
        <br />
        <input type="number" id="GroupCode" name="GroupCode" />
        <br />
        <label>Name</label>
        <br />
        <input type="text" id="GroupName" name="GroupName" />
        <br />
        <label>Select color</label>
        <br />
        @Html.DropDownListFor(m => m.GroupColor, new SelectList(ColorHelper.ColorList, "Code", "Name"), "None")
        <br />
        <button><a class="nav-link text-dark" asp-area="" asp-controller="Group" asp-action="Index">Cancel</a></button>
        <button type="submit">Save</button>
    </form>
</body>
</html>
